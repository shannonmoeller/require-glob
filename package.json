    "file",
    "files",
    "glob",
    "globs",
    "map",
    "mapreduce",
    "multi",
    "multiple",
    "reduce",
    "require",
    "tree"
  ],
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shannonmoeller/require-glob/issues"
  },
  "homepage": "https://github.com/shannonmoeller/require-glob",
  "dependencies": {
    "globby": "^3.0.1",
    "object-assign": "^4.0.1"
  },
  "devDependencies": {
    "ava": "^0.11.0",
    "coveralls": "^2.11.4",
    "nyc": "^5.5.0",
    "watch": "^0.17.1",
    "xo": "^0.12.1"
  }
}
